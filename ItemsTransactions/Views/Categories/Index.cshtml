
@model IEnumerable<Category>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">CategoryName</th>
     
      <th scope="col">ItemsCount</th>
      <th scope="col" class="text-center">Operations</th>
     
      

     
    </tr>
  </thead>
    <tbody>
    @foreach (var category in Model)
    {
 <tr>
      <td>@category.Id</td>
      <td>@category.CategoryName</td>
      
      <td>@category.Item.Count()</td>  

      <form asp-controller="Categories"asp-action="Delete" asp-route-Id=@category.Id >
      <td class="text-center">
      <a class="btn btn-primary " asp-controller="Categories"asp-action="Details" asp-route-Id=@category.Id >
          
          <i class="fa-solid fa-circle-info"></i>
          Details</a>
      <a class ="btn btn-success" asp-controller="Categories" asp-action="Update" asp-route-Id=@category.Id  >
          <i class="fa-solid fa-pen-to-square"></i>
          Update</a>
      <button class ="btn btn-danger" onclick="return confirm('Are you sure you want to delete : @category.CategoryName')" >
          <i class="fa fa-trash" aria-hidden="true"></i>
          Delete</button>
      </td>
     
      </form> 
    </tr>
    }

 
  </tbody>
</table>