@model Category


<style>
.body .row{

    justify-content: center;
}

</style>
<div class="container profile-page">
    <div class="row">
        <div class="col-xl-6 col-lg-7 col-md-12">
            <div class="card profile-header">
                <div class="body">
                    <div class="row">
                        
                        <div class="col-lg-12 col-md-8 col-12 mx-3">
                            <h4 class="m-t-0 m-b-0 text-xl-center"><strong>@Model.CategoryName</strong> </h4>
                            <hr />
                            <p class="job_post"><strong>Id</strong>: @Model.Id</p>
                            <p class="job_post"><strong>CategoryName</strong>: @Model.CategoryName</p>
                          
                            <h4 class="m-t-0 m-b-0 text-xl-center"><strong>Items</strong> </h4>
                            <hr />
                            <div>
                                <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Code</th>
      <th scope="col">Name</th>
      <th scope="col">UnitName</th>
      <th scope="col" >CategoryName</th>
     
    </tr>
  </thead>
    <tbody>
   
 
        @foreach (var item in Model.Item)
                                {
                                    <tr>
                                    <td class="text-center">@item.Code</td>
                                    <td class="text-center">@item.Name</td>
                                    <td class="text-center">@item.Unit.UnitName</td>
                                    <td class="text-center">@item.Category.CategoryName</td>
                                      </tr>
                                }
      
  </tbody>
</table>
                              

                            </div>
                            <form asp-action="categories" asp-controller="Delete" asp-route-Id=@Model.Id >
                                <div class="float-end  my-2 m-4" >
                                <a class="btn btn-outline-primary btn-round 
                                    "asp-action="index" asp-controller="Categories">Back</a>
                                <button type="submit" class="btn btn-danger btn-round btn-simple"
                                onclick="return confirm('Are you sure you want to delete : @Model.CategoryName')" >Delete</button>
                            </div>
                            </form>
                            
                           
                        </div>                
                    </div>
                </div>                    
            </div>
            </div>
            </div>
            </div>
        